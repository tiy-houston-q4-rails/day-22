<h1>Categories</h1>

<div class="links">
  <%= link_to "New Product", new_product_path %>
</div>


<% @categories.each do |category| %>
  <h2><%= category.name %></h2>
  <ul>
    <% category.products.each do |product| %>
      <li><%= link_to product.name, edit_product_path(product) %> -- is in <%= product.category.name %></li>
    <% end %>
  </ul>
<% end %>
