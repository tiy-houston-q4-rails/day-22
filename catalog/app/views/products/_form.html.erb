<%= form_for product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>

  <%= f.submit %>
<% end %>


